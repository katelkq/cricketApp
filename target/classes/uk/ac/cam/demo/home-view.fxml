<VBox alignment="CENTER" prefHeight="844.0" prefWidth="390.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.cam.demo.HelloController">
   <ScrollPane hbarPolicy="NEVER" prefHeight="770.0" prefWidth="390.0">
     <content>
       <AnchorPane>
            <children>
               <Label text="Watch." AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="80.0">
                  <font>
                     <Font name="SF Pro Display Bold" size="48.0" />
                  </font>
               </Label>
                <Button onAction="#onHelloButtonClick" style="-fx-background-color: #679BF1;" text="Hello!" />
            
                            <Label fx:id="welcomeText">
                  <font>
                     <Font name="SF Pro Display Bold" size="13.0" />
                  </font>
               </Label>
            </children>
            <padding>
               <Insets left="20.0" right="20.0" />
            </padding>
         </AnchorPane>
     </content>
   </ScrollPane>
   <HBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="74.0" prefWidth="390.0">
      <children>
       <Button fx:id="homeButton" contentDisplay="GRAPHIC_ONLY" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="74.0" prefWidth="130.0">
            <graphic>
               <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@./icons/home.png" />
                  </image>
               </ImageView>
            </graphic></Button>
         <Button fx:id="addButton" contentDisplay="GRAPHIC_ONLY" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="74.0" prefWidth="130.0">
            <graphic>
               <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@./icons/add_circle.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
         <Button fx:id="favButton" contentDisplay="GRAPHIC_ONLY" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="74.0" prefWidth="130.0">
            <graphic>
               <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@./icons/star.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
      </children>
   </HBox>
</VBox>
